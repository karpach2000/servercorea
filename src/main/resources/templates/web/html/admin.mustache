<!DOCTYPE html>
<html lang="ru">

<head>

    {{>web/html/pattern/headDepend}}
    <title>Администрирование</title>
    <script src="/web/javascript/admin.js"></script>
</head>

<body class="mt-5" onload="toggleMenu()">

    {{>web/html/pattern/navbar}}
    <main role="main" class="container pt-3">
        <div class="row">
            <!--Боковое меню-->
            <div class="col-12 col-md-3 ">
                <div id="menuCounting" class="leftMenu">
                    <ul id="menuCountingItems">
                        {{# page.pageBody.counterMenu.items}}
                        <li><a onclick='menuClick("{{link}}")'>{{name}}</a></li>
                        {{/ page.pageBody.counterMenu.items}}
                    </ul>
                </div>
            </div>
            <div id="bodyDiv" class="col-12 col-md-7">
                <div id="createUser" class="createUser" class="bodyDiv" hidden>
                    
                    <form method="GET" class="bodyDiv" action="/users/addUser">
                        <div class="form-group row">
                            <label for="login" class="col-sm-4 col-form-label">
                                Имя пользователя
                            </label>
                            <div class="col-sm-6">
                                <input type="text" id="login" size="10" name="login" class="form-control"
                                    onkeyup="this.value = this.value.replace(/[^A-Za-zА-Яа-яЁё0-9]/,'');" 
                                    required placeholder="Введите отображаемое имя">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-sm-4 col-form-label">
                                Введите пароль
                            </label>
                            <div class="col-sm-6">
                                <input
                                    type="password"
                                    id="password"
                                    class="form-control"
                                    required
                                    placeholder="Введите пароль"
                                />
                            </div>
                        </div>
                        <div class="form-group row">     
                            <label for="role" class="col-sm-4 col-form-label">Роль пользователя</label>
                            <div class="col-sm-6">   
                                <select id="role" name="role" class="form-control" required>
                                    <option>USER</option>
                                    <option>ADMIN</option>
                                </select>
                            </div> 
                        </div>    
                            <button type="submit" id="createUser" name="createUser" class="btn btn-primary">
                                Создать пользователя
                            </button>
                            <input type="submit" name="createUser" value="Создать пользователя">
                    </form>

                </div>



                <div id="deleteUser" class="bodyDiv" hidden>
                    <form method="GET" action="/users/deleteUser" class="bodyDiv">
                        <div class="form-group row">
                            <label for="login" class="col-sm-4 col-form-label">
                                Имя пользователя
                            </label>
                            <div class="col-sm-6">
                                <input type="text" id="login" size="10" name="login" class="form-control"
                                    onkeyup="this.value = this.value.replace(/[^A-Za-zА-Яа-яЁё0-9]/,'');" 
                                    required placeholder="Введите отображаемое имя">
                            </div>
                        </div>
                        <button type="submit" id="deleteUser" name="deleteUser" class="btn btn-warning">
                            Удалить пользователя
                        </button>
                    </form>
                </div>
                <div id="userList" class="bodyDiv">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Логин</th>
                                <th>Пароль</th>
                                <th>Роль</th>
                            </tr>
                        </thead>
                        <tbody class="table table-striped">
                            {{# page.pageBody.users}}
                            <tr class='table-data'>
                                <td>{{login}}</td>
                                <td>{{password}}</td>
                                <td>{{role}}</td>
                            </tr>
                            {{/ page.pageBody.users}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    {{>web/html/pattern/footer}}
    {{>web/html/pattern/footDepend}}

</body>

</html>