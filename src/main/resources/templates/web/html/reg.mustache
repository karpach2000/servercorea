<!DOCTYPE html>
<html lang="ru">
    <head>
        {{>web/html/pattern/headDepend}}
        <title>Регистрация</title>
        <script src="/web/javascript/reg.js"></script>
    </head>

    <body>
        <main role="main" class="container pt-3">
            <!-- <div id="createUser" class="createUser" class="bodyDiv"> -->
            <!-- <form method="GET" class="bodyDiv" action="/users/addUser"> -->
            <form >
                <div class="form-group row">
                    <label for="login" class="col-sm-4 col-form-label"
                        >Введите логин</label
                    >
                    <div class="col-sm-6">
                        <input
                            type="text"
                            id="login"
                            size="10"
                            class="form-control"
                            onkeyup="this.value = this.value.replace(/[^A-Za-zА-Яа-яЁё0-9]/,'');"
                            required
                            placeholder="Введите отображаемое имя"
                        />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-sm-4 col-form-label"
                        >Введите пароль</label
                    >
                    <div class="col-sm-6">
                        <input
                            type="password"
                            id="password"
                            class="form-control"
                            required
                            placeholder="Введите пароль"
                        />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password2" class="col-sm-4 col-form-label"
                        >Введите пароль повторно</label
                    >
                    <div class="col-sm-6">
                        <input
                            type="password"
                            id="password2"
                            class="form-control"
                            required
                            placeholder="Подтвердите пароль"
                        />
                    </div>
                </div>
                <button
                    type="button"
                    class="btn btn-primary"
                    onclick="reg()"
                    name="createUser"
                    id="createUser"
                >
                    Зарегестрироваться
                </button>
            </form>
            <!-- Modal -->
            <div
                class="modal fade"
                id="alertModal"
                tabindex="-1"
                role="dialog"
                aria-labelledby="alertModalLabel"
                aria-hidden="true"
            >
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                Регистрация
                            </h5>
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p id="alertMessage">...</p>
                        </div>
                        <div class="modal-footer">
                            <button
                                type="button"
                                class="btn btn-secondary"
                                data-dismiss="modal"
                            >
                                Close this message
                            </button>
                            <button class="btn btn-primary" onclick="window.close();" type="button">
                                Close registration
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- </div> -->
        </main>

        {{>web/html/pattern/footDepend}}
    </body>
</html>
